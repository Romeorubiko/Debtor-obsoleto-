<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/recycled_layout"
    android:weightSum="1"
    android:background="@color/ColorSecondary"
    android:layout_height="56dp"
    android:clickable="true"
    tools:ignore="RtlSymmetry"
    android:paddingStart="16dp"
    android:layout_marginBottom="1dp">

    <ImageView
        app:srcCompat="@drawable/ic_euro_symbol_white_24dp"
        android:id="@+id/recycled_modify"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/recycled_text_amount"
        tools:ignore="ContentDescription" />

    <TextView
        android:text="@string/None"
        android:id="@+id/recycled_date"
        android:textColor="@color/Grey"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:gravity="center|end"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/recycled_text_amount" />

    <TextView
        android:text="9999.00"
        android:id="@+id/recycled_text_amount"
        android:gravity="center|end"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginRight="16dp"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp"
        android:layout_height="29dp" />

    <TextView
        android:text="Name and Surname"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:id="@+id/recycled_text_name"
        android:gravity="center|start"
        android:textSize="20sp"
        android:textColor="@android:color/background_dark"
        android:layout_width="180dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/recycled_modify"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/recycled_modify" />

    <TextView
        android:text="TextView"
        android:ellipsize="end"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/recycled_text_reason"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/recycled_modify" />

</RelativeLayout>