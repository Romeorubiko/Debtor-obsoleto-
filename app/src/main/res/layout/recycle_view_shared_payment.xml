<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/recycled_layout_sp"
    android:weightSum="1"
    android:background="@color/ColorSecondary"
    android:layout_height="56dp"
    android:clickable="true"
    tools:ignore="RtlSymmetry"
    android:paddingStart="16dp"
    android:layout_marginBottom="1dp">

    <TextView
        android:text="Name and Surname"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:id="@+id/recycled_text_name"
        android:gravity="center|start"
        android:textSize="20sp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_width="160dp" />

    <TextView
        android:text="@string/Smoneyown"
        android:ellipsize="end"
        android:id="@+id/text_view1"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/recycled_text_name"
        android:layout_height="28dp"
        android:layout_width="70dp"
        android:gravity="center_vertical" />

    <TextView
        android:text="@string/Smoneypaid"
        android:ellipsize="end"
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/recycled_text_name"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:layout_width="70dp" />

    <TextView
    android:text="0000.00"
    android:ellipsize="end"
        android:textColor="@android:color/holo_red_dark"
    android:textSize="16sp"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/text_view1"
        android:layout_width="62dp"
        android:id="@+id/tv_recycled_own" />

    <TextView
        android:text="0000.00"
        android:ellipsize="end"
        android:id="@+id/tv_recycled_paid"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_view1"
        android:layout_width="62dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@android:drawable/ic_delete"
        android:id="@+id/iv_recycled_delete"
        android:tint="@android:color/background_light"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>